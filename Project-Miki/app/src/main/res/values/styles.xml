<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/TitledActionBarStyle</item>
        <item name="android:actionBarDivider">@null</item>
        <item name="android:windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/primary_dark</item>
        <item name="android:actionModeStyle">@style/CustomActionMode</item>
        <item name="android:actionModeCloseButtonStyle">@style/action_button_done</item>
        <item name="android:actionModeCloseDrawable">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="actionBarStyle">@style/TitledActionBarStyle</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_dark</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_light</item>
        <!-- Support library compatibility -->
        <item name="actionBarDivider">@null</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/primary_dark</item>
        <item name="actionModeStyle">@style/CustomActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/action_button_done</item>
        <item name="actionModeCloseDrawable">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
    </style>

    <style name="CustomActionMode" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@drawable/background</item>
        <item name="android:height">?android:attr/actionBarSize</item>
        <!-- Support library compatibility -->
        <item name="background">@drawable/background</item>
        <item name="height">?android:attr/actionBarSize</item>
    </style>

    <style name="action_button_done" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:actionModeCloseDrawable">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="actionModeCloseDrawable">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <item name="colorControlNormal">@color/primary_light</item>
    </style>

    <style name="BillSplitterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/NoTitleActionBarStyle</item>
        <item name="android:actionMenuTextAppearance">@style/NoTitleActionBarMenuStyle</item>
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/primary_dark</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/primary_light</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/NoTitleActionBarStyle</item>
        <item name="actionMenuTextAppearance">@style/NoTitleActionBarMenuStyle</item>
    </style>

    <style name="NoTitleActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">useLogo|showHome</item>
        <item name="android:background">@drawable/background</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">useLogo|showHome</item>
        <item name="background">@drawable/background</item>
    </style>

    <style name="NoTitleActionBarMenuStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textColor">@color/primary_dark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TitledActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:displayOptions">showTitle</item>
        <item name="android:background">@drawable/background</item>
        <!-- Support library compatibility -->
        <item name="displayOptions">showTitle</item>
        <item name="background">@drawable/background</item>
    </style>
</resources>
